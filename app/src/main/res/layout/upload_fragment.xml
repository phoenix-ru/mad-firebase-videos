<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragments.UploadFragment">

    <VideoView
            android:id="@+id/upload_vw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
    />

    <Button
            android:id="@+id/select_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_video"
            android:drawableEnd="@drawable/ic_select_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/upload_vw"
    />

    <Button
            android:id="@+id/upload_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/upload_video"
            android:drawableEnd="@drawable/ic_upload_btn_black_24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/select_btn"
    />

</androidx.constraintlayout.widget.ConstraintLayout>