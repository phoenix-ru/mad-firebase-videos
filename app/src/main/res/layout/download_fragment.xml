<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <VideoView
            android:id="@+id/download_vw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
    />

    <EditText
            android:id="@+id/download_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/video_id"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@id/download_vw"
    />

    <Button
            android:id="@+id/download_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/download_video"
            android:drawableEnd="@drawable/ic_download_btn_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/download_et"
    />

</androidx.constraintlayout.widget.ConstraintLayout>